<h2>Edit Profile</h2>

<%=form_for @user, html: { multipart: true } do |f| %>

<%=f.label :email %>

<%=f.text_field :email %>

<%=f.label :password %>

<%=f.password_field :password %>

<%=f.label :password_confirmation %>

<%=f.password_field :password_confirmation %>

<%=f.label :username %>

<%=f.text_field :username %>

<%= f.label :avatar %><br>
<%= f.file_field :avatar %>

<%=f.submit "Update" %>

<%end%>

